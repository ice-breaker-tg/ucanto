{
  "name": "api",
  "version": "0.0.1",
  "description": "Auth API",
  "private": true,
  "type": "module",
  "main": "dist/worker.js",
  "scripts": {
    "lint": "tsc && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,md,yml,json}' --ignore-path ../../.gitignore",
    "deploy": "wrangler publish",
    "dev": "miniflare --watch --debug --env ../../.env",
    "build": "scripts/cli.js build",
    "test": "tsc && ava"
  },
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "(Apache-2.0 OR MIT)",
  "dependencies": {
    "@ipld/dag-ucan": "1.7.0-beta",
    "@ucanto/authority": "workspace:^",
    "@ucanto/client": "workspace:^",
    "@ucanto/core": "workspace:^",
    "@ucanto/interface": "workspace:^",
    "@ucanto/server": "workspace:^",
    "@ucanto/transport": "workspace:^",
    "multiformats": "^9.6.5",
    "nanoid": "^4.0.0",
    "regexparam": "^2.0.0",
    "toucan-js": "^2.6.0",
    "ucans": "^0.9.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.7.1",
    "@sentry/cli": "^2.1.0",
    "@sentry/webpack-plugin": "^1.16.0",
    "@types/assert": "^1.5.6",
    "@types/git-rev-sync": "^2.0.0",
    "assert": "^2.0.0",
    "ava": "^4.3.0",
    "buffer": "^6.0.3",
    "delay": "^5.0.0",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.42",
    "execa": "^6.1.0",
    "git-rev-sync": "^3.0.1",
    "hd-scripts": "^2.0.1",
    "miniflare": "^2.5.0",
    "process": "^0.11.10",
    "readable-stream": "^3.6.0",
    "sade": "^1.7.4",
    "typescript": "4.7.3",
    "wrangler": "^2.0.12"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./access/packages/api/tsconfig.json"
    },
    "globals": {
      "VERSION": "readonly",
      "COMMITHASH": "readonly",
      "BRANCH": "readonly",
      "DEBUG": "readonly",
      "ACCOUNTS": "writable"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "docs"
  ],
  "ava": {
    "ignoredByWatcher": [
      "./dist/*"
    ]
  }
}
